<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="0dp"/> <!-- 모서리 반지름 0으로 설정하여 사각형으로 만듦 -->
    <solid
        android:color="#809080"
    />
    <stroke
        android:color="#808080"
        android:dashWidth="4dp"
        android:width="2dp"
        android:dashGap="2dp"/>
    <padding
        android:left="6dp"
        android:top="12dp"
        android:right="6dp"
        android:bottom="12dp"/> <!-- 패딩을 추가하여 버튼 크기 조정 -->

</shape>
